//count how many entries are odds 
	
#include <iostream>
#include <vector> //vector
#include <algorithm> //count

using namespace std;

int main()
{
	vector<int> v{ 2,7,1,6,2,2,4,0 };


  
  int odds = 0;

    for (auto elem : v)
    {
      if (elem % 2 == 0)
      {
        odds++;
      }
    }

    cout<<odds<<endl;

     // if lambda return true -> odds ++, if lambda return false -> do nothing
    odds = count_if(begin(v), end(v), [](auto elem){ return elem % 2 !=0;}); 
    
    cout<<odds<<endl;

    return 0;
}
